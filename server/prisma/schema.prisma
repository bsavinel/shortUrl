generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ShortUrlType {
  DEFAULT
  CLICKLIMIT
  EXPIRE
}    

model url {
  id         String   @id @default(uuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  url        String   @unique
  shortUrl   shortUrl[]
}

model shortUrl {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  url       url?     @relation(fields: [urlId], references: [id])
  urlId     String?
  type      ShortUrlType
  shortUrl  String   @unique
  limit     Int?
  expireAt  DateTime?
  count     Int      @default(0)
}